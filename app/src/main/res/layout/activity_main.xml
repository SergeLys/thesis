<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

        <Button
            android:id="@+id/btn_glide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/glide_label"
            android:onClick="onLibBtnClick"/>
        <Button
            android:id="@+id/btn_picasso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/picasso_label"
            android:onClick="onLibBtnClick"/>

        <CheckBox
            android:id="@+id/checkBoxPng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/png"
            android:onClick="onCheckBoxSelect"/>
        <CheckBox
            android:id="@+id/checkBoxJpeg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jpeg"
            android:onClick="onCheckBoxSelect"/>
</LinearLayout>